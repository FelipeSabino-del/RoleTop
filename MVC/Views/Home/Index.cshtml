                }                    
            </div>
            <div>                    
                @if (evento.Status == 1 && evento.Id == 2)
                {
                    <p>Evento @evento.Espaço.Nome <br> Dia @evento.DataDoEvento.ToShortDateString()</p>
                }                    
            </div>
            <div>                    
                @if (evento.Status == 1 && evento.Id == 3)
                {
                    <p>Evento @evento.Espaço.Nome <br> Dia @evento.DataDoEvento.ToShortDateString()</p>                    
                }                    
